html
    font-size 62.5%

html,
body
    height 100%

body
    min-width 360px
    font-family 'Inter', sans-serif
    line-height 20px
    font-size 16px
    font-weight 400
    color #1B2125

header,
aside,
section,
footer
    display block

/*placeholder styles*/
::-webkit-input-placeholder
    color $dark

::-moz-placeholder
    color $dark

:-moz-placeholder
    color $dark

:-ms-input-placeholder
    color $dark

:focus::-webkit-input-placeholder
    color transparent

:focus::-moz-placeholder
    color transparent

:focus:-moz-placeholder
    color transparent

:focus:-ms-input-placeholder
    color transparent

input[type="text"]
input[type="password"]
    padding 0 24px
    width 100%
    display block
    font-family 'Inter', sans-serif
    line-height 18px
    font-size 15px
    color #788995
    border 1px solid #DDE3E8
    border-radius 3px
    outline 0
    box-shadow none
    background-color #fff
    box-sizing border-box

textarea
    font-family 'Inter', sans-serif
    color #788995
    background #FFFFFF
    border 1px solid #DDE3E8
    border-radius 3px
    box-sizing border-box

button
    padding 0
    background none

label
    display block

a
    color #0077E2

    &:hover
        text-decoration none

img
    width 100%
    display block

h1
    line-height 29px
    font-size 24px
    font-weight 300
    text-align center

    @media(min-width 650px)
        line-height 44px
        font-size 36px
        text-align left

h3
    line-height 24px
    font-size 20px
    font-weight 300

    @media(min-width 768px)
        line-height 29px
        font-size 24px

h4
    line-height 19px
    font-size 16px
    font-weight 300

    @media(min-width 768px)
        line-height 29px

    @media(min-width 650px)
        line-height 24px
        font-size 20px

.wrapper
    width 100%
    min-height 100vh
    display flex
    flex-direction column
    justify-content space-between

.center
    margin 0 auto
    padding 0 25px
    max-width 1228px
    width 100%
    box-sizing border-box

    @media(min-width 650px)
        padding 0 39px

.required + .label
    &:after
        content '*'
        position absolute
        top 0
        right 0
        color #EB5757

.title
    margin-bottom 40px

    @media(min-width 768px)
        margin-bottom 90px

    @media(min-width 650px)
        margin-bottom 85px

.underline
    position relative
    cursor pointer

    &:before
        content ''
        width 100%
        height 1px
        position absolute
        top 100%
        left 50%
        background-color #0077E2
        transform translateX(-50%)
        transition width 300ms

    &:hover
        @media(min-width 920px)
            &:before
                width 0