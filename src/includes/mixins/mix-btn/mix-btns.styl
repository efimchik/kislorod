.btn
    width 100%
    height 36px
    display flex
    align-items center
    justify-content center
    line-height 14px
    font-size 11px
    font-weight 500
    color #0077E2
    text-decoration none
    text-transform uppercase
    position relative
    overflow hidden
    border 1px solid #0077E2
    border-radius 3px
    box-sizing border-box
    cursor pointer
    user-select none

    @media(min-width 920px)
        transition all 300ms

    @media(min-width 768px)
        width 250px

    &:before
        content ""
        width 100%
        height 100%
        position absolute
        top 0
        left -100%
        background linear-gradient(-45deg, transparent, rgba(#0077E2, 0.1), transparent)

        @media(min-width 920px)
            transition left 0.7s

    &:hover
        &:before
            @media(min-width 920px)
                left 100%

    &:focus
    &:active
        box-shadow 0px 0px 15px 0 rgba(#0077E2, 0.1)

    &.disabled
    &:disabled
        opacity 0.5
        pointer-events none

    &--blue
        color #fff
        background-color #0077E2

        &:before
            background linear-gradient(-45deg, transparent, rgba(#fff, 0.3), transparent)