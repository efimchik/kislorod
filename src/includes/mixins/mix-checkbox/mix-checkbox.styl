.field
    &__checkbox
        padding 0
        width 0
        height 0
        opacity 0
        position absolute
        top 0
        left 0
        appearance none

        &:checked + .field__checkbox-label:after
            opacity 1

        &:focus + .field__checkbox-label:before
            box-shadow 0px 0px 15px 0 rgba(#0077E2, 0.1)

        &.error + .field__checkbox-label:before
            border 1px solid #eb5757

        &-label
            padding 4px 0 4px 38px
            line-height 16px
            font-size 13px
            color #1B2125
            position relative
            user-select none
            cursor pointer

            &:before
            &:after
                content ''
                position absolute
                box-sizing border-box

            &:before
                width 24px
                height 24px
                top 0
                left 0
                background-color #0077E2
                border-radius 3px

            &:after
                width 10px
                height 8px
                top 8px
                left 7px
                opacity 0
                background url(../img/svg/checked.svg) no-repeat center

                @media(min-width 920px)
                    transition opacity 250ms

            a
                margin-left 5px
                text-decoration none
                position relative

                &:before
                    content ''
                    width 100%
                    height 1px
                    position absolute
                    top 100%
                    left 0
                    border 1px solid transparent
                    background-color #0077e2
                    box-sizing border-box

                    @media(min-width 920px)
                        transition opacity 300ms

                &:hover
                    &:before
                        @media(min-width 920px)
                            opacity 0

        &-box
            position relative