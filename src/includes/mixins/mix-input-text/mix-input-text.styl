.field
    &__text
        height 100%

        &:focus
            box-shadow 0px 0px 10px 0 rgba(#0077E2, 0.1)

        &:focus + .label,
        &:not(:placeholder-shown) + .label
            opacity 0
            visibility hidden

    &__box
        width 100%
        height 42px
        position relative

        @media(min-width 650px)
            height 52px

        .error
            border-color #EB5757

        .label
            padding-right 10px
            position absolute
            left 24px
            top 50%
            line-height 18px
            font-size 15px
            color #788995
            user-select none
            transform translateY(-50%)

            @media(min-width 920px)
                transition all 200ms

    &__info
        margin-top 6px
        display block
        line-height 12px
        font-size 10px
        color #788995

        @media(min-width 768px)
            line-height 15px

        @media(min-width 650px)
            margin-top 8px
            line-height 14px
            font-size 12px