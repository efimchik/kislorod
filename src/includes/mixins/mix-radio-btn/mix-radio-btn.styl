.field
    &__radio
        padding 0
        width 0
        height 0
        opacity 0
        position absolute
        top 0
        left 0
        appearance none

        &:checked + .field__radio-label:before
            border 1px solid #0095F8

        &:checked + .field__radio-label:after
            opacity 1

        &:focus + .field__radio-label:before
            box-shadow 0px 0px 15px 0 rgba(#0077E2, 0.1)

        &-label
            padding 4px 0 3px 35px
            line-height 17px
            font-size 14px
            color #1B2125
            position relative
            user-select none
            cursor pointer

            @media(min-width 650px)
                line-height 18px
                font-size 15px

            span
                margin-top 4px
                display block
                line-height 13px
                font-size 11px
                color #788995

                @media(min-width 650px)
                    line-height 15px
                    font-size 12px

            &:before
            &:after
                content ''
                position absolute
                border-radius 50%
                box-sizing border-box

            &:before
                width 24px
                height 24px
                top 0
                left 0
                background-color #fff
                border 1px solid #DDE3E8

            &:after
                width 10px
                height 10px
                top 7px
                left 7px
                opacity 0
                background-color #0095F8

                @media(min-width 920px)
                    transition opacity 250ms

        &-box
            margin-top 20px
            position relative

            &:first-child
                margin-top 0