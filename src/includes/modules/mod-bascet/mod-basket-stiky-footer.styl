.basket-stiky
    &__footer
        margin-top 20px
        padding-top 20px
        border-top 1px solid #E4EAEE

        @media(min-width 768px)
            margin-top 34px

        @media(min-width 650px)
            margin-top 24px
            padding-top 18px

        &-item
            margin-top 6px
            width 100%
            display flex
            align-items center
            justify-content space-between
            line-height 24px
            font-size 13px
            color #788995

            @media(min-width 650px)
                margin-top 8px

            &:first-child
                margin-top 0

            &:last-child
                margin-top 18px
                padding-top 18px
                line-height 24px
                font-size 16px
                color #1B2125
                font-weight 500
                border-top 1px solid #E4EAEE

                @media(min-width 768px)
                    margin-top 20px
                    padding-top 24px

        &-value
            display flex
            align-items center

        &-result
            &-label
                margin-left 4px

        &-label-label
            margin-right 10px