.basket-stiky
    @media(min-width 920px)
        position sticky
        top 50px

    &__list
        margin-top 20px
        height auto
        max-height 335px
        position relative
        border-top 1px solid #E4EAEE

        @media(min-width 768px)
            margin-top 24px
            padding-top 14px

        @media(min-width 650px)
            margin-top 30px
            padding-top 8px

        &-item
            margin-top 20px
            display flex

            @media(min-width 768px)
                margin-top 20px

            @media(min-width 650px)
                margin-top 18px

            h4
                line-height 18px
                font-size 13px
                color #788995

        &-img
            margin-right 24px
            width 74px
            flex-shrink 0
            overflow hidden
            background-color #fff
            border-radius 3px

            @media(min-width 650px)
                margin-right 30px
                width 88px

        &-info
            width 100%
            display flex
            flex-direction column
            justify-content space-between

            @media(min-width 920px)
                flex-direction column
                align-items flex-start
                justify-content flex-start

            @media(min-width 650px)
                flex-direction row
                align-items center

            h4
                @media(min-width 650px)
                    line-height 20px
                    font-size 16px

        &-title
            @media(min-width 920px)
                margin-bottom 18px

            @media(min-width 650px)
                margin-right 18px

        &-price
            display flex
            line-height 24px
            font-size 13px

            &-value
            &-label
                display block

            &-label
                margin-left 4px