.counter
    margin-top 16px
    width 110px
    flex-shrink 0

    &__block
        width 100%
        height 35px
        display flex
        border 1px solid #DDE3E8
        border-radius 3px
        box-sizing border-box

    &__btn
        width 35px
        height 100%
        display block
        flex-shrink 0
        position relative
        background-color #F8FAFB
        border 0
        cursor pointer

        @media(min-width 920px)
            transition opacity 300ms

        &:before
        &:after
            content ''
            position absolute
            top 50%
            left 50%
            background-color #1B2125
            transform translate(-50%, -50%)

        &:before
            width 13px
            height 2px

        &:after
            width 2px
            height 13px

        &--minus
            &:after
                display none

        &:hover
            @media(min-width 920px)
                opacity 0.5


    input[type="text"]
        padding 0
        line-height 24px
        font-size 14px
        text-align center
        border 0

    &__label
        margin-top 4px
        width 100%
        display flex
        align-items center
        justify-content center
        line-height 20px
        font-size 11px
        color #788995
        text-align center
        opacity 0

        span
            display block

        &-value
            margin-right 4px

        &.active
            opacity 1