.products
    &-list
        max-height 0
        overflow hidden
        box-sizing border-box
        transition max-height 600ms

        &__item
            margin-top -2px
            padding 12px 48px 12px 12px
            display flex
            position relative
            background #fff
            border-radius 3px
            border 2px solid #DDE3E8
            box-sizing border-box

            @media(min-width 650px)
                padding 18px 48px 18px 18px

            &:first-child
                margin-top 0

            &-info
                width 100%
                display flex
                flex-direction column

                @media(min-width 650px)
                    flex-direction row
                    align-items center
                    justify-content space-between

            &-img
                margin-right 14px
                width 70px
                flex-shrink 0
                overflow hidden

                @media(min-width 650px)
                    margin-right 18px
                    width 74px

            &-header
                width 100%

                @media(min-width 650px)
                    margin-right 15px

            &-title
                margin-bottom 8px
                line-height 18px
                font-size 14px

                @media(min-width 650px)
                    margin-bottom 10px
                    line-height 20px
                    font-size 15px

                a
                    text-decoration none
                    transition color 300ms

                    &:hover
                        color #788995

            &-line
                width 100%
                display flex
                line-height 20px
                font-size 12px

            &-label
                margin-right 4px
                color #788995

            &-price
                margin-top 16px
                line-height 24px
                font-size 14px

                @media(min-width 650px)
                    margin 0 15px 0 0

                &-value
                    margin-right 4px
                    white-space nowrap

                &-old
                    display inline-flex
                    position relative
                    font-size 11px
                    color #788995

                    @media(min-width 650px)
                        font-size 12px

                    &:before
                        content ''
                        width 100%
                        height 1px
                        position absolute
                        top 50%
                        left 0
                        background-color #788995

        &__close
            width 12px
            height 12px
            position absolute
            top 18px
            right 18px
            border 0
            cursor pointer
            transition opacity 300ms

            &:before
            &:after
                content ''
                width 100%
                height 2px
                position absolute
                top 50%
                left 0
                background-color #000

            &:before
                transform rotate(45deg)

            &:after
                transform rotate(-45deg)

            &:hover
                opacity 0.5